  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django",
      "type": "debugpy",
      "request": "launch",
      "windows": {
        "program": "${workspaceFolder}\\manage.py",
      },
      "linux": {
        "program": "${workspaceFolder}/manage.py",
      },
      "args": [
        "runserver"
      ],
      "django": true,
      "justMyCode": true,
      "console": "internalConsole",
      "autoReload": {
        "enable": false
      }
    },
    {
      "name": "Django [public]",
      "type": "debugpy",
      "request": "launch",
      "windows": {
        "program": "${workspaceFolder}\\manage.py",
      },
      "linux": {
        "program": "${workspaceFolder}/manage.py",
      },
      "args": [
        "runserver",
        "0.0.0.0:8000"
      ],
      "django": true,
      "justMyCode": true,
      "console": "internalConsole",
      "autoReload": {
        "enable": false
      }
    }
  ]
}